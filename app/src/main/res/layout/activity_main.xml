<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.MainActivity">


    <ImageView
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:id="@+id/imageView"
        android:contentDescription="@string/image1"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/leki_na_dzis"
        android:id="@+id/today"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:allowUndo="false"
        android:textSize="@dimen/big_text_size"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/konto_opiekuna"
        android:id="@+id/user_guardian"
        android:textSize="@dimen/small_text_size"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/today"
        android:layout_alignEnd="@+id/today"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lista_lekow"
        android:id="@+id/lista"
        android:textSize="@dimen/big_text_size"
        android:layout_below="@+id/today"
        android:layout_alignRight="@+id/user_guardian"
        android:layout_alignEnd="@+id/user_guardian" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ustawienia"
        android:id="@+id/settings"
        android:textSize="@dimen/big_text_size"
        android:layout_below="@+id/lista"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nazwa_applikacji"
        android:id="@+id/textView5"
        android:textSize="@dimen/small_text_size"
        android:textColor="#606060"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
