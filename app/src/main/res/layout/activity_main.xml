<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.MainActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:contentDescription="image1"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LEKI NA DZIŚ"
        android:id="@+id/today"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:allowUndo="false"
        android:textSize="30sp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konto opiekuna"
        android:id="@+id/user_guardian"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/today"
        android:layout_alignEnd="@+id/today"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KALENDARZ"
        android:id="@+id/calendar"
        android:textSize="30sp"
        android:layout_below="@+id/today"
        android:layout_alignRight="@+id/user_guardian"
        android:layout_alignEnd="@+id/user_guardian" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USTAWIENIA"
        android:id="@+id/settings"
        android:textSize="30sp"
        android:layout_below="@+id/calendar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/ic_delete"
        android:contentDescription="exit"
        android:onClick="clickExit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Twój Farmaceutyczny Pomocnik"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:textColor="#606060"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
